<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="scroll|enterAlways"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <TextView
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户管理"
                android:layout_centerInParent="true"
                />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/base"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/customer_btn"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 客户列表"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/customer_icon"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/inovice_btn"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="发票列表"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="6dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/inovice"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/partnerbank_btn"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 付款账户"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/partnerbank"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/partneraccount_btn"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 资金余额"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/partneraccount"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/partneraccountlog_btn"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 资金流水"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/partneraccountlog"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/partnerrecharge_btn"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 充值列表"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/partnerrecharge"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/partnersku_btn"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=" 销价列表"
                android:drawableRight="@mipmap/next"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/partnerrecharge"
                android:gravity="center_vertical"
                />
        </LinearLayout>



    </ScrollView>

</LinearLayout>
